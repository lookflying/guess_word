<div class="page-header">
	<h1>Your Guesses</h1>
</div>
<div>
	<p>
	<%=form_tag(do_guess_path, method: "post") do %>
		<button type="submit" class="btn btn-primary">New Guess</button>
	<% end %>
	</p>
	<table class="table table-striped">
		<thead>
			<tr>
				<th>ID</th>
				<th>Time</th>
				<th>Word</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			<% count = 0 %>
			<% @guess_activity.each do |activity| %>
				<tr>
					<% count += 1 %>
					<td><%= count %></td>
					<td><%= display_time(activity) %></td>
					<td><%= display_word(activity) %></td>
					<td>
						<%=form_tag(do_guess_path, method: "post") do %>
							<%= hidden_field_tag :id, activity.id %>
							<button type="submit" class="btn btn-default"><%= display_action(activity) %></button>
						<% end %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
