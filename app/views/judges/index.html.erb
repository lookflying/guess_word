<h1>Listing judges</h1>

<table>
  <thead>
    <tr>
      <th>Time</th>
      <th>User</th>
      <th>Guess</th>
      <th>Judge</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @judges.each do |judge| %>
      <tr>
        <td><%= judge.time %></td>
        <td><%= judge.user %></td>
        <td><%= judge.guess %></td>
        <td><%= judge.judge %></td>
        <td><%= link_to 'Show', judge %></td>
        <td><%= link_to 'Edit', edit_judge_path(judge) %></td>
        <td><%= link_to 'Destroy', judge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

